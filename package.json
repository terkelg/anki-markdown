{
  "name": "anki-markdown",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite test",
    "build": "tsc && vite build && BUILD_TARGET=editor vite build",
    "package": "bun run build && cd anki_markdown && zip -r ../anki-markdown.ankiaddon . -x '__pycache__/*' '.*'",
    "preview": "vite preview",
    "debug": "ln -sfn \"$(pwd)/anki_markdown\" ~/Library/Application\\ Support/Anki2/addons21/anki_markdown && QTWEBENGINE_REMOTE_DEBUGGING=9222 open -a Anki",
    "format": "prettier --write .",
    "release": "bun scripts/release.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/markdown-it": "^14.1.2",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "dependencies": {
    "@shikijs/transformers": "^3.20.0",
    "markdown-it": "^14.1.0",
    "markdown-it-github-alerts": "^1.0.0",
    "markdown-it-mark": "^4.0.0"
  }
}
